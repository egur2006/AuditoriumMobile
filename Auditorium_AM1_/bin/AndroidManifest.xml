        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ListPublicQuestionActivity"
            android:label="@string/title_activity_list_question" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddQuestionActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".ShowQuestionActivity"
            android:label="@string/title_activity_show_question" >
        </activity>
    </application>

</manifest>